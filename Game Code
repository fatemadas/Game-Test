import random

# List of countries
countries = ["Argentina", "Brazil", "Canada", "Denmark", "Egypt", "France", "Germany", "India", "Japan", "Kenya", 
             "Mexico", "Norway", "Russia", "Spain", "Thailand", "United States"]

# Choose a random country
secret_country = random.choice(countries).lower()

def get_distance(guess, target):
    """Calculate the 'distance' between two country names based on letter similarity."""
    return sum(1 for a, b in zip(guess, target) if a == b)

def give_hint(guess, secret_country):
    """Provide a hot/cold hint based on similarity."""
    similarity = get_distance(guess, secret_country)
    if similarity == len(secret_country):
        return "🔥 Correct! You guessed the country!"
    elif similarity > len(secret_country) // 2:
        return "🔥 Hot! You're getting close."
    elif similarity > len(secret_country) // 4:
        return "❄️ Warm. Keep trying!"
    else:
        return "🧊 Cold. You're far off."

print("🌍 Welcome to the Country Guessing Game!")
print("Try to guess the secret country. I'll give you hints: hot, warm, or cold.")
print("You start with 100 points. Incorrect guesses will cost you points!\n")

# Initialize score
score = 100

while True:
    guess = input("\nEnter your guess: ").strip().lower()
    
    if guess not in [c.lower() for c in countries]:
        print("Please enter a valid country from the list!")
        continue
    
    if guess == secret_country:
        print("🔥 Correct! You guessed the country!")
        break

    hint = give_hint(guess, secret_country)
    print(hint)
    
    # Deduct points based on distance
    distance_penalty = max(5, 20 - get_distance(guess, secret_country))
    score -= distance_penalty
    
    print(f"❗ Score: {score} points")
    
    if score <= 0:
        print("\n💀 Game Over! You ran out of points.")
        print(f"The correct country was: {secret_country.capitalize()}")
        break

if score > 0:
    print(f"\n🎉 Congratulations! You finished with {score} points. Thanks for playing!")

  
